<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calculate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.matej.knfdnfsolver.CalculateActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/variableset"
        android:hint="Enter variables" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/formulatv"
        android:hint="Enter formula"
        android:layout_below="@id/variableset"/>
    <Spinner
        android:id="@+id/variableSpinner"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:spinnerMode="dropdown"
        android:layout_below="@id/formulatv"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>
    <Button
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/conbtn"
        android:layout_below="@id/variableSpinner"
        android:text="\u2227"/>
    <Button
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/disbtn"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="-49dp"
        android:layout_below="@id/conbtn"
        android:text="\u2228"/>
    <Button
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/impbtn"
        android:layout_below="@id/disbtn"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="-49dp"
        android:text="\u27F6"/>
    <Button
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/equbtn"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="-49dp"
        android:layout_below="@id/impbtn"
        android:text="\u27F7"/>
    <Button
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/negbtn"
        android:layout_below="@id/equbtn"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="-49dp"
        android:text="\u00AC"/>
    <Button
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/lbtn"
        android:layout_below="@id/equbtn"
        android:layout_marginLeft="225dp"
        android:layout_marginTop="-49dp"
        android:text="("/>
    <Button
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:id="@+id/rbtn"
        android:layout_below="@id/lbtn"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="-49dp"
        android:text=")"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/resultbtn"
        android:layout_marginLeft="55dp"
        android:layout_below="@id/negbtn"
        android:text="Result"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/resetbtn"
        android:layout_below="@id/resultbtn"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="-49dp"
        android:text="Reset"/>
    <TableLayout
        android:id="@+id/variableTableLayout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="220dp">
    </TableLayout>
    <TableLayout
        android:id="@+id/valuesTableLayout"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="240dp">
    </TableLayout>
    <TableLayout
        android:id="@+id/resultTableLayout"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="240dp">
    </TableLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resulttv"
        android:layout_below="@id/resultTableLayout"
        android:scrollbars = "vertical"
        android:text=""/>

</RelativeLayout>
